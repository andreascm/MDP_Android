<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mdp.mdp_android.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="right"
        android:weightSum="1">



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bluetoothButton"
            android:src="@drawable/bluetooth"
            android:layout_weight="0.02"
            android:background="#00000000"
            android:onClick="sendMessage"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settingsButton"
            android:src="@drawable/settings"
            android:layout_weight="0.02"
            android:background="#00000000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settingsButton2"
            android:src="@drawable/dotmenu"
            android:layout_weight="0.02"
            android:onClick="Show Popup"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/mapGrid"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="600dp">
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrowUp"
                    android:src= "@drawable/arrowupblack"
                    android:layout_rowSpan="1"
                    android:background="#00000000"
                    android:layout_columnSpan="1"
                    android:layout_row="0"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/f1button"
                    android:layout_row="0"
                    android:layout_column="13"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F2"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/f2button"
                    android:layout_row="0"
                    android:layout_column="19"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"/>

            </TableRow>

            <TableRow>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrowLeft"
                    android:src= "@drawable/arrowleftblack"
                    android:background="#00000000"
                    android:layout_row="1"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrowRight"
                    android:src= "@drawable/arrowrightblack"
                    android:background="#00000000"
                    android:layout_row="1"
                    android:layout_column="2" />

            </TableRow>

            <TableRow>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrowDown"
                    android:src= "@drawable/arrowdownblack"
                    android:background="#00000000"
                    android:layout_row="2"
                    android:layout_column="1" />

                <ToggleButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textOff="Auto"
                    android:textOn="Manual"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background ="#000000"
                    android:id="@+id/autoButton"
                    android:layout_column="13"
                    android:checked="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/updatebutton"
                    android:layout_row="0"
                    android:layout_column="19"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1" />

            </TableRow>

        </TableLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="left"
                android:textSize="36sp"
                android:text="Status"/>

            <EditText
                android:id="@+id/status"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="50dp"
                android:textSize="36sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/startbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="30sp"
                android:textColor="#fff"
                android:background="@color/colorPrimaryDark"/>
            
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
